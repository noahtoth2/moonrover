#include "esp_camera.h"
#include <WiFi.h>
#include <WiFiUdp.h>
#include <ArduinoOTA.h>

// ============================
// CONFIGURA TU RED WIFI
// ============================
const char* ssid = "roverlunar";
const char* password = "rover123";

// UDP para video (LATENCIA M√çNIMA)
WiFiUDP udp;
const char* udpAddress = "192.168.1.100";  // IP de tu PC
const int udpPort = 5005;

// ============================
// PINES PARA ESP32-S3-CAM
// ============================
#define PWDN_GPIO_NUM    -1
#define RESET_GPIO_NUM   -1
#define XCLK_GPIO_NUM    15
#define SIOD_GPIO_NUM    4
#define SIOC_GPIO_NUM    5

#define Y9_GPIO_NUM      16
#define Y8_GPIO_NUM      17
#define Y7_GPIO_NUM      18
#define Y6_GPIO_NUM      12
#define Y5_GPIO_NUM      10
#define Y4_GPIO_NUM      8
#define Y3_GPIO_NUM      9
#define Y2_GPIO_NUM      11

#define VSYNC_GPIO_NUM   6
#define HREF_GPIO_NUM    7
#define PCLK_GPIO_NUM    13
#define LED_GPIO_NUM     2 // LED verde

// ============================
// CONFIGURACI√ìN DE C√ÅMARA + OTA
// ============================
void setup() {
  Serial.begin(115200);
  Serial.println("\nüì∏ Iniciando ESP32-S3 CAM UDP mejorada...");

  pinMode(LED_GPIO_NUM, OUTPUT);
  digitalWrite(LED_GPIO_NUM, HIGH);

  // -------- Configuraci√≥n de c√°mara --------
  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer   = LEDC_TIMER_0;

  config.pin_d0 = Y2_GPIO_NUM;
  config.pin_d1 = Y3_GPIO_NUM;
  config.pin_d2 = Y4_GPIO_NUM;
  config.pin_d3 = Y5_GPIO_NUM;
  config.pin_d4 = Y6_GPIO_NUM;
  config.pin_d5 = Y7_GPIO_NUM;
  config.pin_d6 = Y8_GPIO_NUM;
  config.pin_d7 = Y9_GPIO_NUM;

  config.pin_xclk = XCLK_GPIO_NUM;
  config.pin_pclk = PCLK_GPIO_NUM;
  config.pin_vsync = VSYNC_GPIO_NUM;
  config.pin_href  = HREF_GPIO_NUM;
  config.pin_sscb_sda = SIOD_GPIO_NUM;
  config.pin_sscb_scl = SIOC_GPIO_NUM;

  config.pin_pwdn = PWDN_GPIO_NUM;
  config.pin_reset = RESET_GPIO_NUM;
  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG;
  config.fb_location = CAMERA_FB_IN_PSRAM;  // Usar PSRAM para liberar SRAM

  config.frame_size = FRAMESIZE_QVGA;  // 320x240
  config.jpeg_quality = 25;            // Menor calidad = m√°s velocidad
  config.fb_count = 1;                 // M√≠nima latencia
  config.grab_mode = CAMERA_GRAB_LATEST;

  // Inicializar c√°mara
  esp_err_t err = esp_camera_init(&config);
  if (err != ESP_OK) {
    Serial.printf("‚ùå Error inicializando c√°mara: 0x%x\n", err);
    while (true);
  }
  Serial.println("‚úÖ C√°mara inicializada correctamente");

  // -------- WiFi --------
  WiFi.begin(ssid, password);
  Serial.print("üîå Conectando WiFi...");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.print("\n‚úÖ Conectado! IP: ");
  Serial.println(WiFi.localIP());

  // -------- OTA --------
  ArduinoOTA.setHostname("esp32s3-cam");
  ArduinoOTA.setPassword("123");

  ArduinoOTA.onStart([]() { Serial.println("üîÑ OTA iniciada..."); });
  ArduinoOTA.onEnd([]() { Serial.println("‚úÖ OTA completada."); });
  ArduinoOTA.onProgress([](unsigned int progress, unsigned int total) {
    Serial.printf("üì¶ Progreso OTA: %u%%\r", (progress * 100) / total);
  });
  ArduinoOTA.onError([](ota_error_t error) {
    Serial.printf("‚ùå Error OTA [%u]\n", error);
  });
  ArduinoOTA.begin();

  Serial.println("üöÄ OTA lista");
  Serial.println("üì° Enviando video UDP a " + String(udpAddress) + ":" + String(udpPort));
}

// ============================
// LOOP PRINCIPAL - ENV√çO UDP ULTRA R√ÅPIDO
// ============================
void loop() {
  ArduinoOTA.handle();

  if (WiFi.status() != WL_CONNECTED) {
    WiFi.begin(ssid, password);
    delay(5000);
    return;
  }

  camera_fb_t *fb = esp_camera_fb_get();
  if (!fb) {
    delay(10);
    return;
  }

  // Enviar JPEG completo en paquetes UDP
  const size_t packetSize = 1200;  // Tama√±o seguro para UDP
  size_t totalPackets = (fb->len + packetSize - 1) / packetSize;

  // Enviar tama√±o total primero (4 bytes)
  udp.beginPacket(udpAddress, udpPort);
  udp.write((uint8_t*)&fb->len, 4);
  udp.endPacket();

  // Enviar datos fragmentados
  for (size_t i = 0; i < totalPackets; i++) {
    size_t offset = i * packetSize;
    size_t len = min(packetSize, fb->len - offset);

    udp.beginPacket(udpAddress, udpPort);
    udp.write(fb->buf + offset, len);
    udp.endPacket();
  }

  esp_camera_fb_return(fb);
  digitalWrite(LED_GPIO_NUM, !digitalRead(LED_GPIO_NUM));
  
  // Sin delay = m√°xima velocidad
  yield();
}
